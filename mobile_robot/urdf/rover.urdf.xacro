<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover">
    
    <link name="base_footprint" />
    <link name="base_link">
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.6 1.0 0.2"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
   </link>

    <joint name="base_joint" type="fixed">
        <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

    <!-- <xacro:property name="side" value="front_left"/>  -->
    <xacro:property name="left_wheel" value="package://mobile_robot/meshes/left_tire.stl"/>
    <xacro:property name="right_wheel" value="package://mobile_robot/meshes/right_tire.stl"/>

    <xacro:macro name="wheel" params="name x y mesh angle_wheel">
        <link name="wheel_${name}_link">
            <visual name="">
        <!--            <origin xyz="0.35 0.35 0.0" rpy="${pi/2} 0.0 ${pi/2}"/> -->
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                    <geometry>
                        <!-- <cylinder radius="0.15" length="0.1"/> -->
                        <mesh filename="package://mobile_robot/meshes/left_tire.stl" scale="0.005 0.005 0.005"/>
                    </geometry>
                    <material name="yellow">
                        <color rgba="1.0 1.0 0.0 1.0"/>
                        <texture filename=""/>
                    </material>
            </visual>
            <collision>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                        <!-- <cylinder radius="0.15" length="0.1"/> -->
                        <mesh filename="${mesh}" scale="0.005 0.005 0.005"/>
                </geometry>
            </collision>
        </link>
        <joint name="wheel_${name}_joint" type="continuous">
            <origin xyz="${x} ${y} 0.0" rpy="0.0 0.0 ${angle_wheel}"/>
            <parent link="base_link"/>
            <child link="wheel_${name}_link"/>
            <axis xyz="0.0 1.0 0.0"/>
        </joint>
        
    </xacro:macro>

    <xacro:wheel name="front_right" x="-0.35" y="0.35" mesh="${right_wheel}" angle_wheel="${-pi/2}"/>
    <xacro:wheel name="front_left" x="0.35" y="0.35" mesh="${left_wheel}" angle_wheel="${pi/2}"/>
    <xacro:wheel name="rear_right" x="-0.35" y="-0.35" mesh="${right_wheel}" angle_wheel="${-pi/2}"/>
    <xacro:wheel name="rear_left" x="0.35" y="-0.35" mesh="${left_wheel}" angle_wheel="${pi/2}"/>

</robot>
